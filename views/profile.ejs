<%- include('partials/logged-in-header') -%>
<body class="body-profile">
<div class="container card-container">
  <div class="row mt-5">
      <div class="col-6">
          <div class="mt-5">
            <h2>Add an Account</h2>
            <form action="/account/createAccount" enctype="multipart/form-data" method="POST">
              <div class="mb-3">
                  <label for="name" class="form-label">Account Name</label>
                  <input type="text" class="form-control" id="name" name="name">
              </div>
              <div class="mb-3">
                  <label for="distributor" class="form-label">Distributor</label>
                  <input type="text" class="form-control" id="distributor" name="distributor">
              </div>
              <div  class="mb-3">
               <label for="accountType">Type of Account:</label>
                <select name = "accountType" id = "accountType">
                  <option value ="On-Premise">On-Premise</option>
                  <option value ="Off-Premise">Off-Premise</option>                  
                </select>
             </div>
              <div class="mb-3">
                  <label for="contact" class="form-label">Main Contact</label>
                  <input type="text" class="form-control" id="contact" name="contact">
              </div>
              <div class="mb-3">
                <label for="notes" class="form-label">Notes</label>
                <textarea class="form-control" id="notes" name="notes"></textarea>
              </div>
              <div class="mb-3">
                <label for="imgUpload" class="form-label">Image</label>
                <input type="file" class="form-control" id="imageUpload" name="file">
              </div>
              <button type="submit" class="btn btn-primary" value="Upload">Submit</button>
            </form>
          </div>
      </div>
      <div class="col-6 mt-5">
        <h2>My Added Accounts</h2>
        <ul class="row list-unstyled">
        <% for(var i=0; i<accounts.length; i++) {%>
          <li class="col-6 justify-content-between mt-5">
            <a href="/account/<%= accounts[i]._id%>">
              <img class="img-fluid" src="<%= accounts[i].image%>">
            </a>
          </li>
        <% } %>
        </ul>
        <div class="row justify-content-center mt-5">
          <a class="btn btn-primary" href="/feed">Return to Feed</a>
        </div>  
      </div>  
    </div>
  </div>
</div>
</body>
<%- include('partials/footer') -%>