<%- include('partials/logged-in-header') -%>
<body>
 <div class="container card-container">
    <h1>Accounts</h1>
  <div class="row row-cols-1 row-cols-md-3 g-4">
    <% for(var i=0; i<accounts.length; i++) {%>
    <div class="col">
      <div class="card h-100">
        <img src="<%= accounts[i].image%>" class="card-img-top" alt="...">
        <div class="card-body">
          <h5 class="card-title"><%= accounts[i].title%></h5>
        <p class="card-text"><small class="text-muted">Added by: <%= accounts[i].userName%></small></p>
          <p class="card-text"><%= accounts[i].caption %></p>
          <a href="/account/<%= accounts[i]._id%>" class="btn btn-outline-primary">View Account</a>
        </div>
        <div class="card-footer">
          <span class="badge bg-primary"><%= accounts[i].distributor%></span>
          <span class="badge rounded-pill bg-secondary"><%= accounts[i].accountType%></span>
        </div>
      </div>
    </div>
    <% } %>
  </div>
</div>
</body>


<%- include('partials/footer') -%>