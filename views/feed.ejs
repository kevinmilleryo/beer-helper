<%- include('partials/logged-in-header') -%>

  <body>
    <div class="container card-container">
      <h1>Accounts</h1>
      <div class="row">
        <div class="dropdown show col-xs-6">
          <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink"
            data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Sort By
          </a>
          <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
            <a class="dropdown-item" href="/ascfeed">Oldest First</a>
            <a class="dropdown-item" href="/feed">Newest First</a>
          </div>
          <!-- <div class="form-group col-md-4">
          </div> -->
          <form action="/search" method="GET" class="form-inline">
            <label class="m-1" for="searchBar">
            </label>
            <div class="input-group w-50">
              <input class="form-control rounded-0 py-2" type="text" value="Search Accounts" name="query">
              <div class="input-group-btn">
                <button class="btn btn-dark float-right"><i class='fas fa-search' style='color:white'
                    type="submit"></i></button>
              </div>
            </div>
        </div>
      </div>
      </select>
      <div class="row row-cols-1 row-cols-md-3 g-4">
        <% for(var i=0; i<accounts.length; i++) {%>
          <div class="col">
            <div class="card h-100">
              <img src="<%= accounts[i].image%>" class="card-img-top" alt="...">
              <div class="card-body">
                <h5 class="card-title">
                  <%= accounts[i].title%>
                </h5>
                <span class="card-text"><small class="text-muted">Added by: <%= accounts[i].userName%></small></span>
                <p class="card-text">
                  <%= accounts[i].notes %>
                </p>
                <a href="/account/<%= accounts[i]._id%>" class="btn btn-outline-primary">View Account</a>
              </div>
              <div class="card-footer">
                <span class="badge bg-primary">
                  <%= accounts[i].distributor%>
                </span>
                <span class="badge rounded-pill bg-secondary">
                  <%= accounts[i].accountType%>
                </span>
              </div>
            </div>
          </div>
          <% } %>
      </div>
    </div>
  </body>


  <%- include('partials/footer') -%>